@model IEnumerable<WebApplication1.Models.Entidades.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h2>INICIO</h2>

<p>
    <a asp-action="Create">Crear Nuevo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @if (item.Tipo == 1)
                    {
                        <label>Administrador</label>
                    }
                    else
                 if (item.Tipo == 2)
                    {
                        <label>Técnico</label>
                    }
                    else
                 if (item.Tipo == 3)
                    {
                        <label>Usuário Normal</label>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
